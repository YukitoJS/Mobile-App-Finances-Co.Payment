<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" /> <!-- радиус скругления -->
            <solid android:color="#FFFFFF" /> <!-- прозрачный или любой цвет, служит фоном -->
        </shape>
    </item>
    <!-- Верхняя часть -->
    <item
        android:top="0dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#1D3A70" /> <!-- первый цвет -->
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/card_image" android:gravity="top"/>
    </item>
    <!-- Нижняя часть -->
    <item
        android:top="120dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#1DAB87" /> <!-- второй цвет -->
        </shape>
    </item>
</layer-list>

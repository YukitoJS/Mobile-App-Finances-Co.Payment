<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigationMenuLayout"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="20dp"
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="Account Info"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"
                android:textColor="#6B7280"
                android:text="Your Name"/>
            <EditText
                android:id="@+id/userNameTv"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="327dp"
                android:layout_height="56dp"
                android:textColor="#1D3A70"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_black"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:background="@drawable/edittext_for_user_date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_black"
                android:textColor="#6B7280"
                android:text="Email"/>
            <EditText
                android:id="@+id/userEmailTv"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="327dp"
                android:layout_height="56dp"
                android:textColor="#1D3A70"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_black"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:background="@drawable/edittext_for_user_date"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navigationMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            android:fontFamily="@font/roboto_black"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/save_btn_design"
            app:backgroundTint="@null"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
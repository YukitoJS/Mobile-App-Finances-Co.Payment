<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePinActivity">
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your new PIN code"
        android:textSize="28sp"
        android:fontFamily="@font/roboto_black"
        android:textColor="#1D3A70"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We use state-of-the-art security measures\nto protect your information at all times"
        android:textColor="#6B7280"/>
    <LinearLayout
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:gravity="center"
            android:id="@+id/et_digit1"
            android:inputType="numberPassword"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/et_digit2"
            android:inputType="numberPassword"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/et_digit3"
            android:inputType="numberPassword"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/et_digit4"
            android:inputType="numberPassword"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/et_digit5"
            android:inputType="numberPassword"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/createPinButton"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:text="Change PIN"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_black"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerificationActivity">
    <Button
        android:id="@+id/backBtn"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:textSize="27dp"
        android:background="@drawable/edittext_forgot_pass"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:text="‹"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify it’s you"
        android:fontFamily="@font/roboto_black"
        android:textSize="26sp"
        android:textColor="#1D3A70"/>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We send a code to "
            android:textSize="18sp"
            android:textColor="#6B7280"/>
        <TextView
            android:id="@+id/useremailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(****@mail.com)."
            android:textSize="18sp"
            android:textColor="#1D3A70"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter it here to verify your identity"
        android:textSize="18sp"
        android:textColor="#6B7280"/>
    <LinearLayout
        android:layout_marginTop="62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:gravity="center"
            android:id="@+id/et_digit1"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/et_digit2"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/et_digit3"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/et_digit4"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/et_digit5"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <EditText
            android:background="@drawable/otp_codes_stroke_edittext"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_black"
            android:textColor="#1D3A70"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/et_digit6"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/resendTv"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_black"
        android:textColor="#1DAB87"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/createPinButton"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:text="Confirm"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_black"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    app:backgroundTint="@null"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background_xml">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/popup_image" /> <!-- Можно добавить свою иконку -->

    <TextView
        android:fontFamily="@font/roboto_black"
        android:layout_marginTop="16dp"
        android:text="Great! your card is ready"
        android:textSize="21sp"
        android:textColor="#1d3a70"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="12dp"
        android:text="Now you can shop, transmit and transfer\nconveniently"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/okButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="Ok, I’m ready!"
        app:backgroundTint="@null"
        android:background="@drawable/save_btn_design" />

</LinearLayout>